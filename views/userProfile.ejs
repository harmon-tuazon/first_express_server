<%- include('./partials/head.ejs') %>

<body>

<!--This is for nav bar-->

<%- include('./partials/nav.ejs') %>

<main class="row d-flex container m-0">
    <div class="col-sm-6">
        <img src="../assets/mainImg.png"  class="img-fluid">
    </div>
    <div class="container-fluid col-sm-6">
        <img class="float-leaf-left journal" src="../assets/float leaf left.png">
        <img class="float-leaf-right journal" src="../assets/float leaf right.png">

        <form action="/users/<%= user._id %>" method="post" id="form">
            <div class="text-center mt-3">
                <h1>Edit Profile</h1>
                <img src="../assets/leaf.png">
            </div>
            <div class="d-flex justify-content-evenly">
                <div class="mb-3 col-4 inputFieldcontainer">
                    <input type="text" class="form-control inputField shadow-none activeField" id="firstName" name="firstname" value="<%= user.firstname %>">
                    <span class="placeHolder activeSpan">First Name</span>
                    <span class="error"></span>
                </div>
                <div class="mb-3 col-4  inputFieldcontainer">
                    <input type="text" class="form-control inputField shadow-none activeField" id="lastName" name="lastname" value="<%= user.lastname %>">
                    <span class="placeHolder activeSpan">Last Name</span>
                    <span class="error"></span>
                </div>
            </div>
            <div class="d-flex justify-content-evenly">
                <div class="mb-3 col-4  inputFieldcontainer">
                    <input type="email" class="form-control inputField shadow-none activeField" id="username" name="username" value="<%= user.username %>">
                    <span class="placeHolder activeSpan">Email</span>
                </div>
                <div class="mb-3 col-4  inputFieldcontainer">
                    <input type="tel" class="form-control inputField shadow-none activeField" id="number" name="phonenumber" value="<%= user.phonenumber %>">
                    <span class="placeHolder col activeSpan activeSpan">Phone Number</span>
                </div>
            </div>
            <div class="d-flex justify-content-evenly">
                <div class="mb-3 col-4  inputFieldcontainer">
                    <input type="password" class="form-control inputField shadow-none activeField" id="password" name="password" value="<%= user.password %>">
                    <span class ="placeHolder activeSpan">Password</span>
                </div>
                <div class="mb-3 col-4  inputFieldcontainer">
                  <input type="password" class="form-control inputField shadow-none activeField" id="confirmPW" name="confirmpassword" value="<%= user.confirmpassword %>">
                  <span class ="placeHolder activeSpan">Confirm Password</span>
                </div>
            </div>
            <div class="d-flex justify-content-center align-items-start gap-5">
                <button type="submit" id="createAcct" class="update btn btn-success btn-lg my-5" data-doc="<%= user._id %>">Save Changes</button>
            </div>
          </form>
    </div>

</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

</body>
</html>