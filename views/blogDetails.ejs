<%- include('./partials/head.ejs') %>

<!--This is for nav bar-->

<%- include('./partials/nav.ejs') %>

<main class="container row m-0">
    <div class="col-12 d-flex flex-column justify-content-start align-items-start border rounded border-success h-75 mt-5 shadow">
        <h1 class="text-bg-success mt-4 mx-3 p-3 w-75"><strong><%= blog.title %></strong></h1>
        <p class="my-1 mx-3"><em><%= blog.snippet %></em></p>
        <p class="my-5 mx-3"><%= blog.content %></p>
    </div>
    <div class="d-flex justify-content-center align-items-start gap-5" style="margin-top: -1.5rem;">
        <a href="http://localhost:3000/blogs"><button class="btn btn-success btn-lg">Back to Blogs</button></a>    
        <button class="remove btn btn-danger btn-lg" data-doc="<%= blog._id %>">Delete</button>
    </div>
</main>

<script>

const trash = document.querySelector('.remove')

function deleteRequest() {
    const endpoint = `/blogs/${trash.dataset.doc}`

    fetch(endpoint, { method: 'DELETE', })
      .then(response => response.json())
      .then(data => window.location.href = data.redirect)
      .catch(err => console.log(err));
    
}
trash.addEventListener('click', deleteRequest);

</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

</body>
</html>